source 'https://rubygems.org'

gem 'rails', '4.0.1'
gem 'pg'
gem 'sass-rails', '~> 4.0.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
 gem 'therubyracer', platforms: :ruby
# Use jquery as the JavaScript library
gem 'jquery-rails'

group :development, :test do
	gem 'guard'  #montiors files
	gem 'guard-livereload' #when save files - will reload browers auto
	gem 'guard-rspec' # runs test when file saved
	gem 'rspec-rails' # rspec is testing library for rubyj
	gem 'capybara' #integration testing wth rails
	gem 'factory_girl_rails' #gem for creating factories - active record objects
	gem 'database_cleaner' #cleans up database after test run
	gem 'shoulda-matchers' # 
end


